#include<iostream>
#include<string>
#include<iomanip>
using namespace std;
struct Student_Details{
	int studentNum;
	char studentName[50];
	char address[100];
};
int main(){
	Student_Details sd[100];
	int n, i, num, flag= 0;
	cout << "\nenter n" << endl;
	cin >> n;
	for (i=0;i<n;i++){
		cout << "Enter student number, name and Address of student " << i+1 << endl << endl;
		cin >> sd[i].studentNum;
		cin.ignore();
		cin >> sd[i].studentName;
		cin >> sd[i].address;
	}
	cout << "\nenter student number to search ";
	cin>>num;
    cout << "\n- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  " << endl <<endl;
	cout<< setw(10) <<"Student Number";
	cout<< setw(20) <<"Name";
	cout<< setw(30) <<"Address" << endl;
    for(i=0;i<n;i++){
	cout << setw(10) << i+1
	<< setw(20)<< sd[i].studentName 
	<< setw(30) << sd[i].address << endl << endl;
	}
	cout << "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  " << endl; 
	for(i=0;i<n;i++){
		if(sd[i].studentNum==num){
			cout<<"\nSearch is successful at position " << (i+1);
			flag=1;
	}
	}
	if (flag==0)
			cout << "\nSearch unsuccessful";	
	
	
}

