       int resto(int x[20],int y[20])
      {
          switch(*x)
          {
                   case 1:
                   cin>>*y;
                        if (*y<=10 && *y>=1)
                   {
                        return 0;
                        }
                        else if (*y>10)
                        {
                             cout<<"you exceed your order limit\n";
                             cout<<"our limit is 10 orders please change your order\n";
                             cout<<"Enter a new order:";
                             cin>>*y;
                             return 0;
                             }
                        
                   break;
                   case 2:
